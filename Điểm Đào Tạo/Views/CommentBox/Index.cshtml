@model List<CommentBox>
  @{
   
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<h1 style="margin-top:100px;text-align: center;">BoxChat</h1>
<a asp-action="Index"asp-controller="TkSuper"class="btn-primary"style="position:fixed" >HomePage</a>
<div style="background-color:white;width:100%;height:60px;position:fixed;bottom:0px;">
   <form asp-controller="CommentBox" asp-action="WriteComment" method="post">
   <input maxlength="1000000"placeholder="Bình luận" style="height:50px;width:500px;box-shadow: 2px 2px 2px #999999;border-radius:5px;position:fixed" type="text" id="comment" name="comment">  <!--phải trùng tên-->
   </form>
</div>
<hr/>

@if (Model != null)
{

   <table class="table">
    @foreach(var item in Model){
       <tr>
           <td>
               <div style="width:50%;height:160px;box-shadow: 2px 2px 2px #999999;background-color:white;border-radius:10px">
                   <img style="height:100px;width:100%;"src="@item.Image">
                   <p>@item.Ten</p>
               </div>
           </td>

           <td id="comment">
               <div style="width:50%;height:160px;word-wrap:break-word;box-shadow: 2px 2px 2px #999999;background-color:#ADD8E6;border-radius:10px">
                   <!--word-wrap:break-word : tự động xuống dòng-->
                   <p>@item.Comment</p>
                   <p style="float:right;margin-top:60px">@item.Time</p>
               </div>
               <div class="delete"> <a asp-action="deletecomment" asp-route-id="@item.ID" style="text-decoration:none">Xóa</a></div>
           </td>
       </tr>
       }
   </table>
}
<style>
.delete{
   display:none;
   float:right; /*hay căn lề*/
   border-radius:6px;
   box-shadow: 2px 2px 2px #999999;
}
#comment:hover .delete{   /*hover thằng delete là con của comment thông qua thằng comment*/
   display:block;
   background-color: white;
   color:red;
}
td:hover{
   background-color:white;
}
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>