@model List<ChiTietDuAn>
<!--truyền vào 2 lần khác nhau -->
<!-- không cùng lúc-->

<h1 style="margin-top:100px">Chỉnh sửa thông tin</h1>

<form asp-controller="QuanLyDuAn" asp-action="EditDuAnlink" method="post">
    <table class="table table-bordered" style="text-align:center;margin-top:50px;margin-left:auto;margin-right:auto" width="60%" border="0" cellspacing="0">
        <!--in ra thằng cần chỉnh sửa-->
        @foreach (var d in Model)
        {
            
            <tr>
                <td><h4>ID:</h4>                                                                      </td>
                <td><input name="ID" type="text" value="@d.ID" required />                            </td>
            </tr>
            <tr>
               <td> <h4>LabID: </h4>                                                                </td>
               <td> <input name="LabID" type="text" value="@d.LabID" required />                    </td>

            </tr>
            <tr>
               <td> <h4>Họ và Tên  :</h4>                                                          </td>
               <td> <input name="Ten" type="text" value="@d.Ten" required />                       </td>
            </tr>
            <tr>
              <td> <h4>Tên dự án : </h4>                                                         </td>
              <td> <input name="Tenduan" type="text" value="@d.Tenduan" required />              </td>
            </tr>
            <tr>
               <td> <h4>Chức vụ  : </h4>                                                         </td>
               <td> <input name="Chucvu" type="text" value="@d.Chucvu" required />               </td>

            </tr>
            <tr>
              <td> <h4>Bắt đầu :</h4>                                                           </td>
              <td> <input name="BatDau" type="text" value="@d.BatDau" required />               </td>
            </tr>
            <tr>
               <td> <h4>Kết thúc:</h4>                                                    </td>
               <td> <input name="KetThuc" type="text" value="@d.KetThuc" required />      </td>
            </tr>
            <tr>
               <td> <h4>Đánh giá:</h4>                                                    </td>
               <td> <input name="Danhgia" type="text" value="@d.Danhgia" required />      </td>

            </tr>
           

           
        }
    </table>
    <button type="submit"> Submit </button>
</form>

<a asp-action="Index">Back to List</a>


@if (Model != null)
{
    {
        <table class="table table-bordered" style="text-align:center;margin-top:50px;margin-left:auto;margin-right:auto" width="60%" border="0" cellspacing="0">
            <tr>
                 <th>ID</th>
                <th>LabID</th>
                <th>Tên</th>
                <th>Tên dự án</th>
               
                <th>Chức vụ</th>
                <th>Bắt đầu</th>
                <th>Kết thúc</th>
                <th>Đánh giá</th>
                
            </tr>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.ID</td>
                    <td>@d.LabID</td>
                    <td>@d.Ten</td>
                    <td>@d.Tenduan</td>
                    <td>@d.Chucvu</td>
                    <td>@d.BatDau</td>
                    <td>@d.KetThuc</td>
                    <td>@d.Danhgia</td>
                   
                    
                </tr>
            }
        </table>
    }
}
